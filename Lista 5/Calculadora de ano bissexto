#include <stdio.h>

int main(){

//declarando variável
    int ano;

//solicitando ao usuário o ano a ser analisado
    printf("Digite o ano a seguir para descobrir caso ele seja bissexto: ");
    scanf("%d", &ano);

//definindo a condição de ano bissexto
    if((ano % 4 == 0 && ano % 100 != 0) || (ano % 400 == 0)){
        printf("\nO ano em questao eh bissexto!");
    } else{
        printf("\nO ano em questao nao eh bissexto!");
    }

    return 0;
}
