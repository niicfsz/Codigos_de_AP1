#include <stdio.h>

int main(){

//declarando as variáveis
    int aulas_assistidas, aulas_obrigatorias;
    float nota;

//pedindo ao usuário as informações necessárias
    printf("Digite a nota do aluno a ser analisada: ");
    scanf("%f", &nota);
    printf("Digite a quantidade de aula assistida pelo aluno: ");
    scanf("%d", &aulas_assistidas);
    printf("E por ultimo, digite a quantidade de aulas obrigatorias a serem assistidas: ");
    scanf("%d", &aulas_obrigatorias);

//determinando a condição de aprovação
    if(nota >= 7 && aulas_assistidas >= (0.75 * aulas_obrigatorias)){
            printf("O aluno foi aprovado!");
    } else{
        printf("O aluno foi reprovado!");
    }

    return 0;
}

